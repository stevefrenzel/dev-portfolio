---
import { Image } from '@astrojs/image/components';
import Divider from '@components/Divider.astro';

import pictureOfMe from '@images/picture-of-me.jpg';
import gitHub from '@images/icons/github.svg';
import linkedIn from '@images/icons/linkedin.svg';
import mastodon from '@images/icons/mastodon.svg';

const socialLinks = [
  {
    alt: 'Steve Frenzel on GitHub',
    icon: gitHub,
    name: 'GitHub',
    rel: 'noopener noreferrer',
    url: 'https://github.com/stevefrenzel',
  },
  {
    alt: 'Steve Frenzel on LinkedIn',
    icon: linkedIn,
    name: 'LinkedIn',
    rel: 'noopener noreferrer',
    url: 'https://www.linkedin.com/in/stevefrenzel/',
  },
  {
    alt: 'Steve Frenzel on Mastodon',
    icon: mastodon,
    name: 'Mastodon',
    rel: 'me',
    url: 'https://mastodon.online/@stvfrnzl',
  },
];
---

<section aria-label='Intro' id='intro'>
  <div class='grid-container'>
    <Image
      alt='Steve Frenzel - Web developer & accessibility engineer'
      src={pictureOfMe}
      style='object-fit: cover;'
      width={600}
      height={500}
      id='profile-picture'
    />
    <div class='text-container'>
      <h1>Steve Frenzel</h1>
      <span class='sub-headline'>Web developer & accessibility engineer</span>
      <p class='paragraph'>
        I specialize in designing and implementing robust and inclusive
        websites. My focus is on accessibility, which I educate about and
        implement practically. I am also a music nerd and love hot sauces! ðŸ”¥
      </p>
      <p>
        If you want to get in touch with me, fill out the <a href='#contact'
          >contact form</a
        >. You can also find me on the following platforms:
      </p>
      <ul>
        {
          socialLinks.map((item) => (
            <li>
              <Image alt={item.alt} class='icon' src={item.icon} />
              <a href={item.url} rel={item.rel}>
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
<Divider />

<style lang='scss'>
  section {
    background: var(--color-white-alt);
    margin-top: var(--space-l);
    max-width: 100%;
    padding: var(--space-xl) var(--space-s);

    * {
      color: var(--color-black-alt);
    }
  }

  .grid-container {
    display: grid;
    gap: var(--space-m);
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    justify-items: center;
    max-width: 1536px;
    margin: 0 auto;
  }

  #profile-picture {
    box-shadow: 0px 0px 49px 0px var(--color-black-alt);
  }

  .paragraph {
    margin: var(--space-l) 0 var(--space-m) 0;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-m);
    list-style-type: none;
    margin: var(--space-l) 0 0 0;
    padding: 0;
  }

  li {
    align-items: center;
    display: flex;
    gap: var(--space-xs);
  }

  .icon {
    height: 48px;
    width: 48px;
  }

  .text-container {
    align-self: center;
  }

  .text {
    margin-top: var(--space-m);
  }
</style>
