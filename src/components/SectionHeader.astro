---
export interface Props {
  accentColor?: string;
  ariaLabel: string;
  href: string;
  title: string;
}

const { ariaLabel, accentColor, href, title } = Astro.props;
---

<div class='section-header'>
  <h2>{title}</h2>
  <a aria-label={ariaLabel} href={href}>#</a>
</div>

<style define:vars={{ accentColor }}>
  .section-header {
    align-items: center;
    display: flex;
    gap: var(--space-s);
  }
  a {
    font-family: 'Syne', sans-serif;
    font-size: var(--step-3);
  }
  a:hover,
  a:focus,
  a:focus-visible {
    outline-color: var(--accentColor);
  }
</style>
