import slack from "@images/icons/slack.svg";
import storybook from "@images/icons/storybook.svg";
import teams from "@images/icons/teams.svg";
import typescript from "@images/icons/typescript.svg";
import vuejs from "@images/icons/vuejs.svg";
import vuetify from "@images/icons/vuetify.svg";

const tasksSellwerk = [
  "Improving work flows by establishing conventions for Git, unit tests and accessibility guidelines",
  "Giving feedback for designs directly in Figma before implementing them",
  "Improving the look and feel of the product based on user tests",
  "Testing changes and features in different browsers and with different screen readers",
  "Reviewing code and providing feedback to ship bullet proof code",
];

const techStackSellwerk = [
  { icon: css, name: "CSS" },
  { icon: figma, name: "Figma" },
  { icon: git, name: "Git" },
  { icon: github, name: "GitHub" },
  { icon: html, name: "HTML" },
  { icon: javascript, name: "JavaScript" },
  { icon: jest, name: "Jest" },
  { icon: nuxt, name: "Nuxt" },
  { icon: slack, name: "Slack" },
  { icon: storybook, name: "Storybook" },
  { icon: typescript, name: "TypeScript" },
  { icon: vuejs, name: "Vue.js" },
  { icon: vuetify, name: "Vuetify" },
];

const tasksNexum = [
  "Working closely with the design team to create an accessible and fun experience for every user",
  "Creating and assembling pixel-perfect components using design templates from Abstract, Sketch or Figma",
  "Planning and writing (unit, integration and E2E) tests to ensure high code quality and great maintainability",
  "Exchanging experiences and tech trends with fellow developers from other sites on a weekly basis",
  "Customising and maintaining e-mail templates in Salesforce Cloud for best possible rendering on all devices and browsers",
  "Managing and delegating tasks in JIRA to stay on track",
];

const techStackNexum = [
  { icon: bamboo, name: "Bamboo" },
  { icon: bitbucket, name: "BitBucket" },
  { icon: css, name: "CSS" },
  { icon: git, name: "Git" },
  { icon: github, name: "GitHub" },
  { icon: html, name: "HTML" },
  { icon: graphql, name: "GraphQL" },
  { icon: javascript, name: "JavaScript" },
  { icon: jest, name: "Jest" },
  { icon: jira, name: "Jira" },
  { icon: nextjs, name: "Next.js" },
  { icon: react, name: "React" },
  { icon: sketch, name: "Sketch" },
  { icon: storybook, name: "Storybook" },
  { icon: teams, name: "Teams" },
  { icon: typescript, name: "TypeScript" },
];

const tasksFifthIndustry = [
  "Creating app designs with Adobe XD in collaboration with the back-end engineer and the product manager",
  "Customizing the designs to match the look and feel of Material UI",
  "Prototyping individual reusable components with React in Storybook, according to the 'Atomic Design' principle and following the Material Design guidelines",
  "Implementing the necessary logic and, if necessary, adapting the UI in cooperation with the backend engineer",
  "Discussing and implementing necessary improvements and further ideas together with the customer",
  "Bringing in further suggestions and ideas through continuous research in the area of UI, UX and Material Design",
];

const techStackFifthIndustry = [
  { icon: adobexd, name: "Adobe XD" },
  { icon: css, name: "CSS" },
  { icon: git, name: "Git" },
  { icon: github, name: "GitHub" },
  { icon: html, name: "HTML" },
  { icon: javascript, name: "JavaScript" },
  { icon: materialui, name: "Material UI" },
  { icon: react, name: "React" },
  { icon: storybook, name: "Storybook" },
];
---

<section aria-label="Work experience" id="experience">
  <SectionHeader title="Experience" ariaLabel="Experience" href="#experience" />

  <div class="spacer"></div>

  <JobDescription
    heading="Frontend Developer & Accessibility Engineer"
    company="Sellwerk GmbH & Co. KG"
    timePeriod="Since September 2022"
    description="Digital marketing solutions for businesses, helping them enhance their online presence and reach their target audience effectively."
    techStack={techStackSellwerk}
    tasks={tasksSellwerk}
  />

  <DividerSmall />

  <JobDescription
    heading="Frontend Developer"
    company="nexum AG"
    timePeriod="August 2020 to August 2022"
    description="Consulting agency for communication, interaction and transaction in the digital age."
    techStack={techStackNexum}
    tasks={tasksNexum}
  />

  <DividerSmall />

  <JobDescription
    heading="Frontend Developer"
    company="5thIndustry GmbH"
    timePeriod="October 2019 to February 2020"
    description="Internet-of-things company specializing in production and logistics to enable higher productivity."
    techStack={techStackFifthIndustry}
    tasks={tasksFifthIndustry}
  />

  <DividerSmall />
</section>

<style>
  section {
    padding: 0;
    width: 100%;
  }
  .spacer {
    margin-top: var(--space-l);
  }
  hr {
    border: 1px solid var(--color-white);
    margin: var(--space-xl) auto;
    width: 50%;
  }
</style>
