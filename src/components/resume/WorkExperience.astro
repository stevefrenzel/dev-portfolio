---
import JobDescription from "@components/resume/JobDescription.astro";

import DividerSmall from "@utils/DividerSmall.astro";
import SectionHeader from "@utils/SectionHeader.astro";

import adobexd from "@images/icons/adobexd.svg";
import bamboo from "@images/icons/bamboo.svg";
import bitbucket from "@images/icons/bitbucket.svg";
import css from "@images/icons/css.svg";
import figma from "@images/icons/figma.svg";
import git from "@images/icons/git.svg";
import github from "@images/icons/github-white.svg";
import html from "@images/icons/html.svg";
import graphql from "@images/icons/graphql.svg";
import javascript from "@images/icons/javascript.svg";
import jest from "@images/icons/jest.svg";
import jira from "@images/icons/jira.svg";
import materialui from "@images/icons/materialui.svg";
import nextjs from "@images/icons/nextjs.svg";
import nuxt from "@images/icons/nuxt.svg";
import react from "@images/icons/react.svg";
