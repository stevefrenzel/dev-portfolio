---
import { Image } from "astro:assets";
import ExternalLink from "@components/utils/ExternalLink.astro";

import desktop from "@images/icons/desktop.svg";
import gitHub from "@images/icons/github-white.svg";
import linkedIn from "@images/icons/linkedin-white.svg";
import mastodon from "@images/icons/mastodon-white.svg";

const links = [
  {
    href: "/",
    height: 24,
    name: "Website",
    src: desktop,
    width: 24,
  },
  {
    href: "https://www.linkedin.com/in/stevefrenzel",
    height: 36,
    name: "LinkedIn",
    src: linkedIn,
    width: 36,
  },
  {
    href: "https://github.com/stevefrenzel",
    height: 36,
    name: "GitHub",
    src: gitHub,
    width: 36,
  },
  {
    href: "https://mastodon.online/@stvfrnzl",
    height: 36,
    name: "Mastodon",
    src: mastodon,
    width: 36,
  },
];
---

<section aria-label="Intro" id="intro-resume">
  <div class="container">
    <div class="headlines">
      <h1>Steve Frenzel</h1>
      <span class="sub-headline">Web Developer & Accessibility Advocate</span>
    </div>
    <div>
      <ul>
        {
          links.map((link) => (
            <li>
              <Image
                alt=""
                height={link.height}
                src={link.src}
                width={link.width}
              />
              <ExternalLink href={link.href} name={link.name} />
            </li>
          ))
        }
      </ul>
    </div>
  </div>
  <div class="text">
    <p>
      After working as a sound engineer, stagehand, tour manager and music
      producer for over 10 years, I found another passion: Creating beautiful
      and robust websites!<span aria-hidden="true">üë®‚Äçüíª</span>
    </p>
    <p>
      My focus is frontend development, with special attention to accessibility,
      as well as writing clean, reliable and maintainable code.
    </p>
  </div>
</section>

<style>
  section {
    border-style: solid;
    border-width: 0 0 3px 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    margin: 0 auto var(--space-m) auto;
    max-width: 1536px;
    padding: var(--space-s) 0;
  }

  h1 {
    margin: 0;
  }

  .headlines,
  .text {
    padding: 0 var(--space-s);
  }

  .container {
    align-self: center;
  }

  .text {
    margin: var(--space-s) 0;
  }

  .text p:first-child() {
    margin-bottom: var(--space-s);
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-s);
    justify-content: start;
    list-style-type: none;
    margin: var(--space-m) var(--space-s) 0 var(--space-s);
    padding: 0;
  }

  li {
    align-items: center;
    display: flex;
    gap: var(--space-3xs);
  }

  li:first-child() img {
    margin-right: var(--space-3xs);
  }
</style>
