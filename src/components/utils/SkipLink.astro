---
import { Image } from "astro:assets";
import arrow from "@images/icons/arrow-upward.svg";
---

<a id="skip-link" href="#main"
  >Skip to main content <Image
    alt="Arrow down"
    class="arrow-down"
    height={24}
    src={arrow}
    width={24}
  /></a
>

<style>
  a {
    align-items: center;
    display: flex;
    height: 1px;
    left: -9999px;
    position: absolute;
    overflow: hidden;
    top: auto;
    width: 1px;
  }

  a:focus,
  a:focus-visible {
    background-color: blue;
    color: var(--color-white) !important;
    height: auto;
    left: 8px;
    outline: none;
    padding: var(--space-xs);
    position: fixed;
    text-decoration: none;
    top: 8px;
    width: auto;
  }

  img {
    margin-left: var(--space-xs);
    transform: rotate(180deg);
  }
</style>
