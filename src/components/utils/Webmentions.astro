---
import { Image } from "astro:assets";

interface AuthorProps {
  name: string;
  photo: string;
  url: string;
}

interface WebmentionProps {
  author: AuthorProps;
  "wm-received": string;
  "wm-property": string;
}

interface Props {
  webmentions: WebmentionProps[];
}

const { webmentions } = Astro.props;

const showDate = (webmention: string) =>
  new Date(webmention).toLocaleDateString(undefined, {
    day: "numeric",
    month: "long",
    year: "numeric",
  });

const numberOfLikes = webmentions.filter(
  (item) => item["wm-property"] === "like-of",
).length;

const webmentionsLikes = webmentions.filter(
  (item) => item["wm-property"] === "like-of",
);

const numberOfReposts = webmentions.filter(
  (item) => item["wm-property"] === "repost-of",
).length;

const webmentionsReposts = webmentions.filter(
  (item) => item["wm-property"] === "repost-of",
);
---

{
  webmentions.length > 0 ? (
    <section aria-label="Webmentions">
      <h2>Webmentions</h2>

      {numberOfLikes > 0 ? (
        <div>
          <h3>{numberOfLikes} Like(s)</h3>
          <ul>
            {webmentionsLikes.map((webmention: WebmentionProps) => (
              <li>
                <div class="avatar-and-author">
                  {webmention.author.photo ? (
                    <Image
                      alt=""
                      height="50"
                      src={webmention.author.photo}
                      width="50"
                    />
                  ) : null}
                  <div>
                    <a href={webmention.author.url} rel="author">
                      {webmention.author.name}
                    </a>
                    <time datetime={webmention["wm-received"]}>
                      {showDate(webmention["wm-received"])}
                    </time>
                  </div>
                </div>
              </li>
            ))}
          </ul>
        </div>
      ) : null}

      {numberOfReposts > 0 ? (
        <div>
          <h3>{numberOfReposts} Repost(s)</h3>
          <ul>
            {webmentionsReposts.map((webmention: WebmentionProps) => (
              <li>
                <div class="avatar-and-author">
                  {webmention.author.photo ? (
                    <Image
                      alt=""
                      height="50"
                      src={webmention.author.photo}
                      width="50"
                    />
                  ) : null}
                  <div>
                    <a href={webmention.author.url} rel="author">
                      {webmention.author.name}
                    </a>
                    <time datetime={webmention["wm-received"]}>
                      {showDate(webmention["wm-received"])}
                    </time>
                  </div>
                </div>
              </li>
            ))}
          </ul>
        </div>
      ) : null}
    </section>
  ) : null
}

<style>
  section {
    border-radius: 10px;
    margin-top: var(--space-l);
  }

  h2 {
    font-size: var(--step-2);
    margin-top: var(--space-s);
  }

  h3 {
    font-size: var(--step-1);
  }

  .info {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    font-size: var(--step-0);
    gap: var(--space-xs);
    margin-top: var(--space-xs);
  }

  a {
    font-size: var(--step-0);
    width: fit-content;
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-m);
    padding: 0;
  }

  li {
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: var(--space-xs);
    list-style-type: none;
    padding: var(--space-xs);
    width: fit-content;
  }

  .avatar-and-author {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    width: fit-content;
  }

  .avatar-and-author div {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
  }

  img {
    border-radius: 50%;
    margin: 0 !important;
    max-height: 40px;
    max-width: 40px;
  }
</style>
